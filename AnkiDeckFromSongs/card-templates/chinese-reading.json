{
  "templateName": "chinese-reading",
  "description": "Template for Chinese reading cards - Chinese character first, then show audio, Pinyin and English",
  "cardStructure": {
    "front": "<div style=\"font-size: 3em; text-align: center; font-family: 'Noto Sans CJK SC', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', SimSun, sans-serif; line-height: 1.2; margin: 20px;\">{{chineseText}}</div>",
    "back": "[sound:{{audioFileName}}]<br><br>({{pinyin}})<br><br>{{englishText}}<br><br>{{explanation}}",
    "audioFile": "{{audioFileName}}",
    "chineseText": "{{chineseText}}",
    "translation": "{{englishText}}"
  },
  "requiredFields": ["name", "chineseText", "pinyin", "englishText"],
  "optionalFields": ["explanation"]
}
